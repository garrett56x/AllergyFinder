<html>
	<head>
		<link href='http://fonts.googleapis.com/css?family=Maven+Pro' rel='stylesheet' type='text/css'>
		<style>
		.login{
			min-height:600px;
		}
		.title{
			margin-top:29px;
			font-size: 63px;
			color:white;
		    text-shadow: 2px 4px 3px rgba(0,0,0,0.3);
		}
		</style>
	</head>
	<body>
	<div class='container login'>
		<div class='row text-center'>
			<h1 class='title'>Food Intolerance Evaluation</h1>
		</div>
			<div class='row'>
				<!-- Registration -->
				<div class='col-sm-4 col-sm-offset-1' style='text-align:right'>
					<h3 style='text-align: center'>Register</h3><br>
					<% if @errors %>
						<% @errors.each do |error| %>
							<p style='color:red'><%= error %></p>
						<% end %>
					<% end %>
					<% if @success %>
						<h4 style='color:green'><%= @success %></h4>
					<% end %>
					<form action='/users' method='post'>
						<input type='hidden' name='authenticity_token' value='<%= form_authenticity_token %>'>
						<label>Name</label>
						<input type='text' name='user[name]'><br>
						<label>Email</label>
						<input type='text' name='user[email]'><br>
						<label>Password</label>
						<input type='password' name='user[password]' placeholder='min 7 characters'><br>
						<label>Confirm Password</label>
						<input type='password' name='user[password_confirmation]'><br><br>
						<input type='submit' value='Register' class='btn btn-primary'>
					</form>
				</div>
				<!-- Login -->
				<div class='col-sm-4' style='text-align:right'>
					<h3 style='text-align: center'>Login</h3><br>
					<form action='/sessions' method='post'>
						<input type='hidden' name='authenticity_token' value='<%= form_authenticity_token %>'>
						<label>Email</label>
						<input type='text' name='session[email]'><br>
						<label>Password</label>
						<input type='password' name='session[password]'><br><br>
						<input type='submit' value='Log In' class='btn btn-primary'>
					</form>
				</div>
			</div>
		</div>
	<body>
</html>