<head>
<!-- Bootstrap CDN -->
	<script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
	   <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css" rel="stylesheet">
	<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
	<!-- <link href='http://fonts.googleapis.com/css?family=Quicksand' rel='stylesheet' type='text/css'> -->

	<style>
	.triggers{
		background-color: #f26d6d;
		color: #b20101;
		min-height: 400px;
		border: solid #b20101 2px;
		border-radius: 5px;
		margin: 10px;
		font-weight: bold;
	}
	.safe{
		background-color: #83fc83;
		color: #087c00;
		min-height: 400px;
		border: solid #087c00 2px;
		border-radius: 5px;
		margin: 10px;
		font-weight: bold;
	}
	</style>
</head>
<body>
	<%= render 'partials/navbar' %>
	<div class='container'>
		<div class='row'>
			<div class='col-md-5 triggers'>
				<h1 style='color: black'>Triggers</h1>
				<ul>
					<% @triggers.each do |trigger| %>
						<li><%= trigger.ingredient %></li>
					<% end %>
				</ul>
			</div>

			<div class='col-md-5 safe'>
				<h1 style='color: black'>Safe</h1>
				<ul>
					<% @safes.each do |safe| %>
						<li><%= safe.ingredient %></li>
					<% end %>
				</ul>
			</div>
		</div>
	</div>
</body>