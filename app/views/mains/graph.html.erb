	<table class="table table-striped">
		<thead>
			<th>Ingredient</th>
			<% if @symptomName %>
				<th><%= @symptomName.name %> Frequency</th>
			<% else %>
				<th>Heartburn Frequency</th>
			<% end %>
			<th>Ingredient Totals</th>
		</thead>
		<tbody>
			<% @totalsHash.each do |key, total|%>
			<tr>
				<td><%= key %></td>
				<% if total.respond_to?(:length) %>
					<td><%= total[1] %> (<%= ((total[1].to_f/total[0].to_f)*100).round(2) %>%)</td>
					<td><%= total[0] %></td>
				<% else %>
					<td>0</td>
					<td><%= total[0] %></td>
				<% end %>
			</tr>
			<% end %>
		</tbody>
	</table>

