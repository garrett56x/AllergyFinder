<head>
<!-- Bootstrap CDN -->
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
	   <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css" rel="stylesheet">
	<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
	<style>
	#radio{
		margin-top:10px;
	}
	.symptomButton{
		display: inline-block;
	}
	.red{
		color: red;
		font-weight: bold;
	}
	.orange{
		color: #fc8f00;
		font-weight: bold;
	}
	.yellow{
		color: #fdc700;
		font-weight: bold;
	}
	.green{
		color: green;
		font-weight: bold;
	}
	</style>
	<!-- JQuery Accordian -->
	<link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
	<script src="//code.jquery.com/jquery-1.10.2.js"></script>
	<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
	<script>
		$(function() {
		    $( "#radio" ).buttonset();
		});

	</script>
</head>

<%= render 'partials/navbar' %>

<div class='container'>

	<h1>Data Analysis For <%= @user.name %></h1>

	<div class='buttons'>
	    <% @symptoms.each do |symptom| %>
		<form action='/test' method='post' class='symptomButton'>
			<input type='hidden' name='authenticity_token' value='<%= form_authenticity_token %>'>
			<input type='hidden' name='symptom' value='<%= symptom.id %>'>
	   		<button class='btn btn-info'><%= symptom.name %></button>
		</form>   		
	    <% end %>
	</div>

	<table class="table table-striped">
		<thead>
			<th>Ingredient</th>
			<% if @symptomName %>
				<th><%= @symptomName.name %> Frequency</th>
			<% else %>
				<th>Heartburn Frequency</th>
			<% end %>
			<th>Ingredient Totals</th>
			<th>Actions</th>
		</thead>
		<tbody>
			<% @sortedHash.each do |key, total|%>
				<% if total[0] > 80 %>
					<tr class='red'>
						<td><%= key %></td>
						<td><%= total[2] %> (<%= total[0] %>%)</td>
						<td><%= total[1] %></td>
						<td>
							<form action='/triggers' method='post' class='symptomButton'>
								<input type='hidden' name='authenticity_token' value='<%= form_authenticity_token %>'>
								<input type='hidden' name='user' value='<%= @user.id %>'>
								<input type='hidden' name='ingredient' value='<%= key %>'>
								<input type='hidden' name='bool' value='1'>
								<button class='btn btn-warning'>Trigger</button>
							</form>
							<form action='/triggers' method='post' class='symptomButton'>
								<input type='hidden' name='authenticity_token' value='<%= form_authenticity_token %>'>
								<input type='hidden' name='user' value='<%= @user.id %>'>
								<input type='hidden' name='ingredient' value='<%= key %>'>
								<input type='hidden' name='bool' value='0'>
								<button class='btn btn-success'>Safe</button>
							</form>
						</td>
					</tr>
				<% elsif total[0] <= 80 && total[0] > 60 %>
					<tr class='orange'>
						<td><%= key %></td>
						<td><%= total[2] %> (<%= total[0] %>%)</td>
						<td><%= total[1] %></td>
						<td><button class='btn btn-warning'>Trigger</button> <button class='btn btn-success'>Safe</button></td>
					</tr>
				<% elsif total[0] <= 60 && total[0] > 40 %>
					<tr class='yellow'>
						<td><%= key %></td>
						<td><%= total[2] %> (<%= total[0] %>%)</td>
						<td><%= total[1] %></td>
						<td>
							<form action='/triggers' method='post' class='symptomButton'>
								<input type='hidden' name='authenticity_token' value='<%= form_authenticity_token %>'>
								<input type='hidden' name='user' value='<%= @user.id %>'>
								<input type='hidden' name='ingredient' value='<%= key %>'>
								<input type='hidden' name='bool' value='1'>
								<button class='btn btn-warning'>Trigger</button>
							</form>
							<form action='/triggers' method='post' class='symptomButton'>
								<input type='hidden' name='authenticity_token' value='<%= form_authenticity_token %>'>
								<input type='hidden' name='user' value='<%= @user.id %>'>
								<input type='hidden' name='ingredient' value='<%= key %>'>
								<input type='hidden' name='bool' value='0'>
								<button class='btn btn-success'>Safe</button>
							</form>
						</td>
					</tr>
				<% elsif total[0] <= 40 && total[0] > 20 %>
					<tr style='font-weight: bold'>
						<td><%= key %></td>
						<td><%= total[2] %> (<%= total[0] %>%)</td>
						<td><%= total[1] %></td>
						<td>
							<form action='/triggers' method='post' class='symptomButton'>
								<input type='hidden' name='authenticity_token' value='<%= form_authenticity_token %>'>
								<input type='hidden' name='user' value='<%= @user.id %>'>
								<input type='hidden' name='ingredient' value='<%= key %>'>
								<input type='hidden' name='bool' value='1'>
								<button class='btn btn-warning'>Trigger</button>
							</form>
							<form action='/triggers' method='post' class='symptomButton'>
								<input type='hidden' name='authenticity_token' value='<%= form_authenticity_token %>'>
								<input type='hidden' name='user' value='<%= @user.id %>'>
								<input type='hidden' name='ingredient' value='<%= key %>'>
								<input type='hidden' name='bool' value='0'>
								<button class='btn btn-success'>Safe</button>
							</form>
						</td>
					</tr>
				<% elsif total[0] <= 20 %>
					<tr class='green'>
						<td><%= key %></td>
						<td><%= total[2] %> (<%= total[0] %>%)</td>
						<td><%= total[1] %></td>
						<td>
							<form action='/triggers' method='post' class='symptomButton'>
								<input type='hidden' name='authenticity_token' value='<%= form_authenticity_token %>'>
								<input type='hidden' name='user' value='<%= @user.id %>'>
								<input type='hidden' name='ingredient' value='<%= key %>'>
								<input type='hidden' name='bool' value='1'>
								<button class='btn btn-warning'>Trigger</button>
							</form>
							<form action='/triggers' method='post' class='symptomButton'>
								<input type='hidden' name='authenticity_token' value='<%= form_authenticity_token %>'>
								<input type='hidden' name='user' value='<%= @user.id %>'>
								<input type='hidden' name='ingredient' value='<%= key %>'>
								<input type='hidden' name='bool' value='0'>
								<button class='btn btn-success'>Safe</button>
							</form>
						</td>
					</tr>
				<% end %>
			<% end %>
		</tbody>
	</table>

</div>