<head>
<!-- Bootstrap CDN -->
	<script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
	<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css" rel="stylesheet">
	<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
	<link href='//fonts.googleapis.com/css?family=Quicksand' rel='stylesheet' type='text/css'>
	<!-- High Charts CDN -->
	<script src="//code.highcharts.com/highcharts.js"></script>
	<script src="//code.highcharts.com/highcharts-more.js"></script>
	<script src="//code.highcharts.com/modules/exporting.js"></script>
	<!-- CSS -->
	<style>
	.btn{
		margin-top:10px;
		display:inline-block;
	}
	#container{
		border: 1px solid silver;
		border-radius:6px;
	}
	</style>
	<!-- High Charts JQuery -->
	<script>
	// $( document ).ready(function() {
		$(function () {
		    $('#container').highcharts({
		        chart: {
		            polar: true,
		            type: 'line'
		        },

		        title: {
		            text: 'Overall Diet Category Distribution',
		            x: -80
		        },

		        pane: {
		            size: '80%'
		        },

		        xAxis: {
		            categories: ['Dairy', 'Grains', 'Meats', 'Fruits',
		                    'Vegetables', 'Processed'],
		            tickmarkPlacement: 'on',
		            lineWidth: 0
		        },

		        yAxis: {
		            gridLineInterpolation: 'polygon',
		            lineWidth: 0,
		            min: 0
		        },

		        tooltip: {
		            shared: true,
		            pointFormat: '<span style="color:{series.color}">{series.name}: <b>{point.y:,.0f}</b><br/>'
		        },

		        legend: {
		            align: 'right',
		            verticalAlign: 'top',
		            y: 70,
		            layout: 'vertical'
		        },

		        series: [{
		            name: 'Quantity',
		            data: <%=@dataOutput%>,
		            pointPlacement: 'on'
		        }]
		    });
	    });
	// });
	</script>
</head>
<body>
	<!-- Navbar Render -->
	<%= render 'partials/navbar' %>
<div class='container'>
	<div class='row'>
		<div class='text-center'>
			<div class='center-block' id="container" style="min-width: 400px; max-width: 600px; height: 400px; margin: 0 auto"></div>
		</div>
	</div>
	<div class='row text-center'>
	<!-- Navigation Buttons -->
		<button class='btn btn-info btn-xs center-block' disabled>Category Distribution</button>
		<a href="/graph2"><button class='btn btn-info btn-xs center-block'>Time of Day Analyis</button></a>
	</div>
</div>
</body>
