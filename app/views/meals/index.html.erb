<div class='container'>

	<div class='row'>
		<h1>Create New Meal</h1>
	</div>

	<div class='row'>

		<div class='col-md-6'>
			<h2>Meal Picture and Symptom</h2>
			<% if @meal %>
				<%= image_tag @meal.meal_pic.url %>
				<h3>Symptom: <%= @meal.symptom.name %></h3>
				<h3>Severity: <%= @meal.severity %></h3>
			<% else %>
				<img src='data:image/png;base64,' alt='food'>
				<form action='/meals' method='post' enctype='multipart/form-data'>
					<input type='hidden' name='authenticity_token' value='<%= form_authenticity_token %>'>
					<input type='hidden' name='meal[user_id]' value='<%= @user.id %>'>
					<label>Select Symptom: </label>
					<select name='meal[symptom_id]'>
						<% @symptoms.each do |symptom| %>
								<option value='<%= symptom.id %>'><%= symptom.name %></option>
						<% end %>
					</select><br>
					<label>Severity: </label>
					<select name='meal[severity]'>
						<option>1</option>
						<option>2</option>
						<option>3</option>
						<option>4</option>
						<option>5</option>
						<option>6</option>
						<option>7</option>
						<option>8</option>
						<option>9</option>
						<option>10</option>
					</select><br>
					<label>Upload Picture: </label>
					<input type="file" name="meal[meal_pic]"><br>
					<input type='submit' class='btn btn-success' value='Add Meal'>
				</form>
			<% end %>
		</div>

		<div class='col-md-6'>
			<h2>Ingredients</h2>
		</div>

	</div>

</div>